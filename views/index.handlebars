<h1>Burgers!</h1>

<h2>Eat this Burger! Devour! Devour!</h2>

<ul>
    {{#each burgers}}
      {{#unless devour}}
        {{partial/burger-block devour=false}}
      {{/unless}}
    {{/each}}
</ul>

<h2>This Burger has been devoured!</h2>

<ul>
    {{#each burgers}}
      {{#if devour}}
        {{partial/burger-block devour=true}}
      {{/if}}
    {{/each}}  
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
