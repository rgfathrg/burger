<h1>Burgers!</h1>

<h2>Eat this Burger! Devour! Devour!</h2>

<ul>
    {{#each burgers}}
      {{#unless devoured}}
        <li>
            <p>Burger: {{this.burger_name}}</p><button data-id="{{this.id}}" data-devoured="{{this.devoured}}" class="devour">Devour Burger!</button>
        </li>
      {{/unless}}
    {{/each}}
</ul>

<h2>This Burger has been devoured!</h2>

<ul>
    {{#each burgers}}
      {{#if devoured}}
        <li>
            <p>Burger: {{this.burger_name}}</p>
        </li>
      {{/if}}
    {{/each}}  
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
